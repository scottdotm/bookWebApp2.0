<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>db.driver.class</param-name>
        <param-value>com.mysql.jdbc.Driver</param-value>
    </context-param>
    <context-param>
        <param-name>db.url</param-name>
        <param-value>jdbc:mysql://localhost:3306/book</param-value>
    </context-param>
    <context-param>
        <param-name>db.username</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>db.password</param-name>
        <param-value>admin</param-value>
    </context-param>
    <context-param>
        <param-name>db.table</param-name>
        <param-value>author</param-value>
    </context-param>
    <context-param>
        <param-name>db.colone</param-name>
        <param-value>author_name</param-value>
    </context-param>
    <context-param>
        <param-name>db.coltwo</param-name>
        <param-value>date_added</param-value>
    </context-param>
    <context-param>
        <param-name>db.primarykey</param-name>
        <param-value>author_id</param-value>
    </context-param>
    <context-param>
        <param-name>db.jindi.name</param-name>
        <param-value>jdbc/book</param-value>
    </context-param>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
